<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yumnaasim.devfest.MainActivity">


 <LinearLayout
     android:padding="16dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <TextView
         android:id="@+id/org_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"

         android:text="Enter billing information:"
         android:textColor="@android:color/black"

         android:textSize="20sp"
         android:textStyle="bold" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:text="Credit Card # "

         android:textColor="@android:color/black"

         android:textSize="20sp"
         android:textStyle="bold" />

     <EditText
         android:id="@+id/editText2"
         android:padding="5dp"
         android:inputType="number"
         android:background="@drawable/box"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"

         android:text="Enter amount to donate:"

         android:textColor="@android:color/black"

         android:textSize="20sp"
         android:textStyle="bold" />
     <EditText
         android:id="@+id/editText3"
         android:background="@drawable/box"
         android:layout_width="match_parent"
         android:padding="5dp"
         android:inputType="number"
         android:layout_height="wrap_content" />

     <info.hoang8f.widget.FButton
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/buttonSubmit"
         android:text="SUBMIT"
         fbutton:buttonColor="@color/colorAccent"
         fbutton:shadowColor="@color/colorPrimary"
         fbutton:shadowEnabled="true"
         android:layout_margin="16dp"
         fbutton:shadowHeight="5dp"
         fbutton:cornerRadius="5dp"
         />
 </LinearLayout>


</LinearLayout>
